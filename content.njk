layout: layout.njk
permalink: /{{env.LEVEL1NAME}}/{{env.LEVEL2NAME}}/content/
---
 <script src="https://cdnjs.cloudflare.com/ajax/libs/jsoneditor/9.9.2/jsoneditor.min.js" integrity="sha512-MP2pEPP3BGw032ovuAsX6yTu7O4J6L3YTXuyq3IpR+LuwRun9BBjOeeIKgO3bRiNlI88x3oCVb9I1/1+xmvFIg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jsoneditor/9.9.2/jsoneditor.min.css" integrity="sha512-brXxIa/fpMfluh8HUWyrNssKy/H0oRzA0HhmipgfVwbXPamMUTZn1jEsvoGGwJYCRpSx4idujdul4vFwWgPROA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- Main Quill library -->
    <script src="//cdn.quilljs.com/1.3.6/quill.js"></script>
    <script src="//cdn.quilljs.com/1.3.6/quill.min.js"></script>
 
    <!-- Theme included stylesheets -->
    <link href="//cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
    <link href="//cdn.quilljs.com/1.3.6/quill.bubble.css" rel="stylesheet">

{% set theJs %}
    {% include 'content.js' %}
{% endset %}
<!-- Page Heading -->
   <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800" id="content-header"></h1>
        <a href="/{{env.LEVEL1NAME}}/{{env.LEVEL2NAME}}s/" class="d-sm-inline-block btn btn-sm btn-primary shadow-sm">
        <i class="fas fa-backward fa-sm text-white-50"></i> Back</a>
    </div>
<p class="mb-4">
</p>
<div class="row">
    <!-- JSON -->
    <div class="col-xl-5 col-lg-3">
        <div class="card shadow mb-4">
            <!-- Card Header - Dropdown -->
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">JSON Object</h6>
            </div>
            <!-- Card Body -->
            <div class="card-body">
                <div class="form-group">
                    <div id="jsoneditor" style="width: 100%; height: 500px;"></div>
                </div>
            </div>
        </div>
    </div>
    <!-- CONTENT -->
    <div class="col-xl-7 col-lg-5">
        <div class="card shadow mb-4">
            <!-- Card Header - Dropdown -->
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Content Editor</h6>
            </div>
            <!-- Card Body -->
            <div class="card-body">
                <div class="d-none editorElement" id="editorText">
                    <div id="editor-container" style="height: 458px"></div>
                </div>
                <div class="d-none editorElement" id="editorBoolean">
                    Boolean
                </div>
                <div class="d-none editorElement" id="editorNumber">
                    <div class="mb-3">
                        <input class="form-control" type="number" id="editor-number" name="editor-number" placeholder="Enter a number">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    
 

<button class="btn btn-primary btn-user btn-block" id="btn-save">
    Save
</button>

{% if env.ENVIRONMENT == 'local' %}
    <script type="text/javascript">{{theJs | safe}}</script>
{% else %}
    <script type="text/javascript">{{theJs | jsmin | safe}}</script>
{% endif %}

