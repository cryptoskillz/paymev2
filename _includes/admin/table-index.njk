<!-- Page Heading -->

 <div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800"><a href="/{{env.LEVEL1NAME}}/">{{env.LEVEL1NAME | capitalize }}</a> / <span id="recordTitle"></span> {{ title | capitalize }}</h1>
    
    <a href="{{ crumb }}new/" class="btn btn-sm btn-primary shadow-sm d-none" id="btn-create-cy">
    <i class="fas fa-download fa-sm text-white-50"></i> Create New</a>
    
</div>
<div class="card shadow mb-4">

    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Current {{ title }}</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                    {% for field in headerFields %}
                        <th width=20%>   {{ field }}</th> 
                    {% endfor %}
                        <th>Actions</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                    {% for field in headerFields %}
                        <th>   {{ field }}</th> 
                    {% endfor %}
                        <th>Actions</th>
                    </tr>
                </tfoot>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>
{% if env.ENVIRONMENT == 'local' %}
    <script type="text/javascript">{{theJs | safe}}</script>
{% else %}
    <script type="text/javascript">{{theJs | jsmin | safe}}</script>
{% endif %}