---
layout: login-layout.njk
---
{% set theJs %}
    {% include 'user.js' %}
{% endset %}
    <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-2">Forgot Your Password?</h1>
                                        <p class="mb-4">We get it, stuff happens. Just enter your email address below
                                            and we'll send you a link to reset your password!</p>
                                    </div>
                                    <div class="alert alert-success  d-none" role="alert" id="accountsSuccess">
                                    </div>
                                    <div class="alert alert-danger  d-none" role="alert" id="accountsAlert">
                                    </div>
                                    <div class="user">
                                        <div class="form-group">
                                            <input type="email" class="form-control form-control-user"
                                                id="inp-email" aria-describedby="emailHelp"
                                                placeholder="Enter Email Address...">
                                                <span class="text-danger d-none" id="error-email">Invalid Email Address </span>
                                        </div>

                                        <button class="btn btn-primary btn-user btn-block" id="btn-forgot-password">
                                            Reset Password
                                        </button>
                                    </div>
                                    <hr>
                                    <div class="text-center">
                                        <a class="small" href="/create-account/">Create an Account!</a>
                                    </div>
                                    <div class="text-center">
                                        <a class="small" href="/login/">Already have an account? Login!</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


            </div>

        </div>
        <script type="text/javascript">{{theJs  | safe}}</script>