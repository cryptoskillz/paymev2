---
layout: login-layout.njk
---
{% set theJs %}
    {% include 'user.js' %}
{% endset %}
    <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                        	<!--
                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                            -->
                            <div class="col-lg-12">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Welcome Back!</h1>
                                    </div>

                                    <div class="alert alert-success  d-none" role="alert" id="accountsSuccess"></div>
                                    <div class="alert alert-danger  d-none" role="alert" id="accountsDanger"></div>
            
                                        <div class="form-group">
                                            <input type="email" class="form-control form-control-user" id="inp-email" aria-describedby="emailHelp" placeholder="Enter Email Address...">
                                           	<span class="text-danger d-none" id="error-email">Invalid Email Address </span>
						                    <span class="input-icon verify-icon">
						                        <img class="d-none" id="valid-email-icon" src="{{env.CDN_URL}}images/check_circle.png" alt="">
						                    </span>
                                        </div>
                                        <div class="form-group">
                                            <input type="password" class="form-control form-control-user"
                                                id="inp-password1" placeholder="Password">
                                            <span class="text-danger d-none" id="error-password1"></span>


                                            <!--

                                            todo : fix the styling on this

                                           
                    						<a href="javascript:showPassword('inp-password1')" class="input-icon eye-icon" id="inp-password1-open"></a>
                    						<a href="javascript:showPassword('inp-password1')" class="input-icon eye-icon close-eye d-none" id="inp-password1-close"></a> 
											 
											-->
                                        </div>
                                        <!--
                                        <div class="form-group">
                                            <div class="custom-control custom-checkbox small">
                                                <input type="checkbox" class="custom-control-input" id="customCheck">
                                                <label class="custom-control-label" for="customCheck">Remember
                                                    Me</label>
                                            </div>
                                        </div>
                                        -->
                                        <button class="btn btn-primary btn-user btn-block" id="btn-login">
                                            Login
                                        </button>

                            <!--
                                        <hr>
                                        <a href="index.html" class="btn btn-google btn-user btn-block">
                                            <i class="fab fa-google fa-fw"></i> Login with Google
                                        </a>
                                        <a href="index.html" class="btn btn-facebook btn-user btn-block">
                                            <i class="fab fa-facebook-f fa-fw"></i> Login with Facebook
                                        </a>
                                        -->
                                   
                                    <hr>
                                    <div class="text-center">
                                        <a class="small" href="/forgot-password/">Forgot Password?</a>
                                    </div>
                                    <div class="text-center">
                                        <a class="small" href="/create-account/">Create an Account!</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>
{% if env.ENVIRONMENT == 'local' %}
    <script type="text/javascript">{{theJs | safe}}</script>
{% else %}
    <script type="text/javascript">{{theJs | jsmin | safe}}</script>
{% endif %}